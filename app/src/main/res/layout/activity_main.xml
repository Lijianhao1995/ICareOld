<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal"
        android:background="@drawable/mainactivity_weatherbackground"
        android:id="@+id/weather_info_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京市"
        android:textSize="50dp"
        android:textColor="#000"
        android:id="@+id/weatherCity"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="雾霾"
            android:textSize="30dp"
            android:textColor="#000"
            android:id="@+id/weather"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_alignTop="@+id/weatherCity"
            android:layout_toRightOf="@+id/weatherCity"
            android:layout_toEndOf="@+id/weatherCity" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="11°C~19°C"
            android:id="@+id/temperature"
            android:layout_below="@+id/weather"
            android:layout_alignLeft="@+id/weather"
            android:layout_alignStart="@+id/weather" />

        <ImageButton

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="20"
            android:id="@+id/refresh_weather"
            android:background="@drawable/reload"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

        <View
            android:layout_marginTop="130dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="1.0px"/>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">
        <ImageView

            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/mainactivity_remind"
            />
        </LinearLayout>
    <View
        android:layout_marginTop="165dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="1.0px"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:src="@drawable/mainactivity_chat"
            android:id="@+id/chat" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:src="@drawable/mainactivity_movie"
            android:id="@+id/movie" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:src="@drawable/mainactivity_subscription"
            android:id="@+id/subscription"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:src="@drawable/mainactivity_gift"
            android:id="@+id/gift"/>

    </LinearLayout>
    <View
        android:layout_marginTop="290dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="1.0px"
        android:id="@+id/linearLayout6" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="礼物精选"
            android:textSize="18dp"/>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="41.4dp"
        android:background="@drawable/white_backgroud"
        android:id="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:background="@drawable/home_red"
            android:id="@+id/home"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:background="@drawable/mine_white"
            android:id="@+id/settings"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:background="@drawable/settings_white"
            android:id="@+id/setting"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp" />


    </RelativeLayout>

</RelativeLayout>
